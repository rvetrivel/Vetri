<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">


    <!-- Footer aligned to bottom -->
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"

        android:background="@color/white"
        android:weightSum="1">

        <ImageView
            android:layout_width="395dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:src="@drawable/logo"
            android:layout_weight="0.21" />

        <com.qib.qibhr1.Font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:text="@string/pleaseselectlan"
            android:textColor="#0066A1"
            android:textSize="50dp"
            android:textIsSelectable="false"
            android:gravity="center" />
        <com.qib.qibhr1.Font
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="الرجاء إختيار اللغة "
            android:textColor="#0066A1"
            android:textSize="50dp"
            android:layout_marginTop="35dp" />
        <Button
            android:id="@+id/english"
            android:layout_width="379dp"
            android:layout_height="60dp"
            android:background="@drawable/english_button"
            android:clickable="true"
            android:onClick="english"
            android:layout_gravity="center"
            android:layout_weight="0.06"
            android:layout_marginTop="25dp" />
        <Button
            android:id="@+id/arabic"
            android:layout_width="379dp"
            android:layout_height="60dp"
            android:clickable="true"
            android:onClick="Arabic"
            android:background="@drawable/arabic_button"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_weight="0.06" />

        <!--<Spinner
            android:id="@+id/spinner1"
            android:layout_width="198dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:entries="@array/languages"
            android:gravity="center"
            android:paddingTop="25sp"
            android:textColor="#9f580a" />-->

    </LinearLayout>
</RelativeLayout>