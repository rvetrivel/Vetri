                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:onClick="Yes"
                            android:gravity="right">
                        <ImageView
                            android:background="@null"
                            android:id="@+id/yes"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/correct_button"
                            android:textColor="#FFA100"
                            android:textAllCaps="false"
                            android:gravity="center|left"
                            android:textSize="18dp"
                            android:checked="false" />

                        </LinearLayout>
                        <LinearLayout
                            android:background="@drawable/wrong_mark"
                            android:orientation="horizontal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="right"
                            android:onClick="No"
                            android:layout_marginLeft="10dp">
                        <ImageView
                            android:background="@null"
                            android:id="@+id/no"
                            android:layout_width="80sp"
                            android:layout_height="80sp"
                            android:src="@drawable/correct_button"
                            android:textColor="#0066A1"
                            android:gravity="center|left"
                            android:textAllCaps="false"
                            android:textSize="20dp" />
                        </LinearLayout>
                    </LinearLayout>
                    <ImageView
                        android:background="@drawable/corner_match_bg_bottom"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"></ImageView>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/essaywrite"
                android:orientation="vertical"
                android:background="@drawable/bg_qiz_mcq"
                android:layout_width="677dp"
                android:layout_height="526dp"
                android:layout_gravity="center"
                android:weightSum="1"
                android:layout_weight="23.30">
                <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"
                    android:weightSum="1">
                    <EditText
                        android:id="@+id/essay"
                        android:layout_width="525dp"

                        android:hint="@string/start"
                        android:textColorHint="@color/input_register_hint"
                        android:inputType="textMultiLine"
                        android:layout_height="wrap_content"
                        android:layout_weight="0.06"
                        android:textSize="25dp"
                        android:textColor="#000" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>



    <include layout="@layout/footer"
        />
    <include
        android:id="@+id/progress"
        layout="@layout/progressbar"
        />
</LinearLayout>