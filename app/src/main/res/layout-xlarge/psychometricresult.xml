<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#fff"
    android:weightSum="1">
    <include android:id="@+id/heder"
        layout="@layout/header1" />
    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent">
    <TextView
        android:text="user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:textSize="25dp"
        android:id="@+id/name"
        android:textColor="#000" />
    <LinearLayout
        android:layout_width="465dp"
        android:layout_height="250dp"
        android:layout_gravity="center_horizontal"
        android:orientation="horizontal"
        android:paddingLeft="40dp"
        android:paddingRight="40dp"
        android:id="@+id/linearLayout"
        android:layout_below="@+id/tool_bar3"
        android:weightSum="1"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">


        <ImageView
            android:layout_width="150dp"
            android:layout_height="250dp"
            android:src="@drawable/results_icon_user"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:layout_weight="0.40"
            android:id="@+id/person" />


    </LinearLayout>
    <TextView
        android:text="@string/personality"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="35dp"
        android:textColor="#002664"
        android:textStyle="bold"
        android:id="@+id/type" />
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="746dp"
        android:layout_height="600dp"
        android:layout_gravity="center"
        android:layout_marginLeft="15dp">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:id="@+id/personalityimge" />

    </LinearLayout>
    <include
        layout="@layout/gohome" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>