<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
        <!-- Application theme. -->
        <style name="AppTheme1" parent="Theme.AppCompat.Light.DarkActionBar">
            <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
            <item name="colorPrimary">@color/ColorPrimary</item>
            <item name="colorAccent">@color/colorAccent</item>
        </style>
    <style name="normalText" parent="@android:style/TextAppearance">
        <item name="android:textSize">19sp</item>
        <item name="android:typeface">sans</item>
        <item name="android:textColor">#000</item>
    </style>

    <style name="blinkText" parent="normalText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#FF0000</item>
    </style>
    <style name="blink" parent="normalText">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#BDBDBD</item>
    </style>
    <style name="MyMaterialTheme" parent="MyMaterialTheme.Base">

    </style>

    <style name="MyMaterialTheme.Base" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="homeAsUpIndicator">@drawable/menu</item>
    </style>
    <style name="TextLabel" parent="TextAppearance.AppCompat">
        <!-- Hint color and label color in FALSE state -->
        <item name="android:textColorHint">@color/list_background_pressed</item>
        <item name="android:textSize">15dp</item>
        <!-- Label color in TRUE state and bar color FALSE and TRUE State -->
     <item name="colorPrimaryDark">@color/ColorPrimaryDark</item>
        <item name="colorPrimary">@color/ColorPrimary</item>
        <item name="colorAccent">@color/list_background_pressed</item>
    </style>
    <style name="TextAppearence.App.TextInputLayout" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/list_background_pressed</item>
    <item name="android:textColorHint">@color/list_background_pressed</item>
        <item name="colorControlNormal">#c5c5c5</item>
        <item name="colorControlActivated">@color/list_background_pressed</item>
        <item name="colorControlHighlight">@color/list_background_pressed</item></style>
</resources>
